@model MedSys.Models.Medicamentos

@{
    ViewData["Title"] = "Create";
}

<h4>Medicamentos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeMedicamento" class="control-label"></label>
                <input asp-for="NomeMedicamento" class="form-control" />
                <span asp-validation-for="NomeMedicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoteMedicamento" class="control-label"></label>
                <input asp-for="LoteMedicamento" class="form-control" />
                <span asp-validation-for="LoteMedicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMedicamento" class="control-label"></label>
                <input asp-for="TipoMedicamento" class="form-control" />
                <span asp-validation-for="TipoMedicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
