@model MedSys.Models.Medicamentos

@{
    ViewData["Title"] = "Delete";
}

<h4>Tem certeza que deseja excluir medicamento?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeMedicamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeMedicamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LoteMedicamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoteMedicamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMedicamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoMedicamento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
